.vce-button--style-basic.vce-button.vce-button--style-basic--color-$selector {
  a&,
  button& {
    &, &:not(:hover) {
    @if $color != false {
      color: $color;
    }
    @if $background != false {
      background-color: $background;
    }
  }
    &:hover {
      @if $color != false {
        color: $color;
      }
      @if $background != false {
        background-color: color($background shade(10%));
      }
    }
    &:focus {
      @if $color != false {
        color: $color;
      }
    }
  }
}
