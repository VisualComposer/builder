        },
        {
          "label": "Right",
          "value": "right",
          "icon": "vcv-ui-icon-attribute-alignment-right"
        }
      ]
    }
  },
  "showUsername": {
    "type": "toggle",
    "access": "public",
    "value": true,
    "options": {
      "label": "Show username",
      "onChange": {
        "rules": {
          "buttonType": {
            "rule": "value",
            "options": {
